DELETE CLIENTE SET CLIENTE_NOMBRE=’’ WHERE NOMBRE_CLIENTE=’’;

SELECT T1.CAMPO1,T1.CAMPO2,T2.CAMPO2,T2.CAMPO5;

JOIN TABLA3 AS T3 ON T3.CAMPO_FK=T1.CAMPO_ID;

SELECT *FROM PRODUCTOS WHERE PROD_CAT_ID=(In para mas de una muestra) (SELECT CAT_ID FROM CATEGORIA WHERE CAT_NOMBRE LIKE 'E%'(esto hace que empiece por E));


SELECT Ventas_ClienteID,SUM(Ventas_Total) FROM ventas
GROUP BY Ventas_ClienteID;

SELECT Ventas_ClienteID AS Cliente,
YEAR(Ventas_Fecha) AS Año,MONTH(Ventas_Fecha) AS Mes,DAY(Ventas_Fecha) AS Dia,
SUM(Ventas_Total)AS Total
FROM ventas GROUP BY Cliente,Año,Mes,Dia;

SELECT Ventas_ClienteID AS Cliente,
YEAR(Ventas_Fecha) AS Año,MONTHNAME(Ventas_Fecha) AS Mes,
SUM(Ventas_Total)AS Total
FROM ventas GROUP BY Cliente,Año,Mes;

SELECT Ventas_ClienteID AS Cliente,
YEAR(Ventas_Fecha) AS Año,MONTHNAME(Ventas_Fecha) AS Mes,
MIN(Ventas_Total)AS Minimo,
MAX(Ventas_Total)AS Maximo,
AVG(Ventas_Total)AS Media,
SUM(Ventas_Total)AS Total,
COUNT(*)AS Operaciones
FROM ventas GROUP BY Cliente,Año,Mes;
