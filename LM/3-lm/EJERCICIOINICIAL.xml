    {$p/prestamo/devolucion}
  </libro>
5-
for $l in /biblioteca/libros/libro
return 
    <llibre>
        <titol>{data($l/titulo)}</titol>
        <autor1>{data($l/autor[1]/nombre/text())} {data($l/autor[1]/apellido/text())}</autor1>
        <autor2>
            {
                if (count($l/autor) > 1)
                then "cia"
                else ()
            }
        </autor2>
    </llibre>
